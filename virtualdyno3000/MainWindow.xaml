<Window x:Class="virtualdyno3000.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:virtualdyno3000"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <DataGrid x:Name="carGrid" HorizontalAlignment="Left" Height="169" Margin="116,10,0,0" VerticalAlignment="Top" Width="391">
            <DataGrid.Columns>
                <DataGridTextColumn Width="45" Header="Car id" Binding="{Binding id}"/>
                <DataGridTextColumn Width="150" Header="Manufacturer" Binding="{Binding manufacturer}"/>
                <DataGridTextColumn Width="150" Header="Model" Binding="{Binding model}"/>
                <DataGridTextColumn Width="45" Header="State" Binding="{Binding broke}"/>
            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</Window>
