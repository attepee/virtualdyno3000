<Window x:Class="virtualdyno3000.NewCarWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:virtualdyno3000"
        mc:Ignorable="d"
        Title="Add new car" Height="330" Width="320" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <Button x:Name="save" Content="Save" HorizontalAlignment="Left" Margin="10,40,0,0" VerticalAlignment="Top" Width="100" Height="30" Click="save_Click"/>
        <Button x:Name="clear" Content="Clear" HorizontalAlignment="Left" Margin="10,90,0,0" VerticalAlignment="Top" Width="100" Height="30" Click="clear_Click"/>
        <Button x:Name="close" Content="Close" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Margin="10,140,0,0" Height="30" Click="close_Click"/>
        <StackPanel x:Name="stackPanel" HorizontalAlignment="Left" Height="281" Margin="140,10,0,0" VerticalAlignment="Top" Width="164">
            <Label Content="Manufacturer" HorizontalAlignment="Left" Height="30" Width="150"/>
            <TextBox x:Name="manufacturer" HorizontalAlignment="Left" Height="30" Width="150" Margin="0,0,0,10" VerticalContentAlignment="Center"/>
            <Label Content="Model" HorizontalAlignment="Left" Height="30" Width="150"/>
            <TextBox x:Name="model" HorizontalAlignment="Left" Height="30" Width="150" Margin="0,0,0,10" VerticalContentAlignment="Center"/>
            <Label Content="Engine size" HorizontalAlignment="Left" Height="30" Width="150"/>
            <TextBox x:Name="engine" HorizontalAlignment="Left" Height="30" Width="150" Margin="0,0,0,10" VerticalContentAlignment="Center"/>
            <Label Content="Manufacturing year&#xD;&#xA;" HorizontalAlignment="Left" Height="30" Width="150"/>
            <TextBox x:Name="year" HorizontalAlignment="Left" Height="30" Width="150" Margin="0,0,0,10" VerticalContentAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>
